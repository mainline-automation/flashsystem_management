            "new_question": true,
            "variable": "os",
            "question_name": "os_choice",
            "type": "multiplechoice"
        },
        {
            "required": false,
            "question_description": "What hostname will you map this to?",
            "new_question": true,
            "variable": "hostname",
            "question_name": "hostname_map",
            "type": "text"
        },
        {
            "required": false,
            "question_description": "What is the FQDN for the host?",
            "new_question": true,
            "variable": "host_fqdn",
            "question_name": "fqdn_choice",
            "type": "text"
        }
